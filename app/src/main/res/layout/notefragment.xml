<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <EditText
        android:id="@+id/sharedText"
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:layout_marginLeft="16dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_weight="1.00" >
        </EditText>

    <FrameLayout
        android:id="@+id/content_frame_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="@dimen/fab_margin"
            app:backgroundTint="@android:color/background_light"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_check_box" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_bullet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginEnd="95dp"
            android:layout_marginRight="95dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_bullet_point"
            app:backgroundTint="@android:color/background_light"
            app:fabSize="mini"
            app:layout_anchor="@id/fab_box"
            app:layout_anchorGravity="top" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_bullet_on"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginEnd="95dp"
            android:layout_marginRight="95dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_bullet_on"
            android:visibility="gone"
            app:backgroundTint="@android:color/background_dark"
            app:fabSize="mini"
            app:layout_anchor="@id/fab_box"
            app:layout_anchorGravity="top" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginLeft="174dp"
            android:layout_marginStart="174dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_font_italic"
            app:backgroundTint="@android:color/background_light"
            app:fabSize="mini"
            app:layout_anchor="@id/fab_box"
            app:layout_anchorGravity="top" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginLeft="95dp"
            android:layout_marginStart="95dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_font_bold"
            android:visibility="visible"
            app:backgroundTint="@android:color/background_light"
            app:fabSize="mini"
            app:layout_anchor="@id/fab_italic"
            app:layout_anchorGravity="end" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_fontcolor_black"
            app:backgroundTint="@android:color/background_light"
            app:fabSize="mini"
            app:layout_anchor="@id/fab_box"
            app:layout_anchorGravity="top" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/content_frame_toolbar2"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_color_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_fontcolor_black"
            android:visibility="gone"
            app:backgroundTint="@android:color/background_light"
            app:fabSize="mini"
            app:layout_anchor="@id/fab_box"
            app:layout_anchorGravity="top" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_color_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_fontcolor_black"
            android:visibility="gone"
            app:backgroundTint="@android:color/holo_red_dark"
            app:fabSize="mini"
            app:layout_anchor="@id/fab_box"
            app:layout_anchorGravity="top" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_color_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginLeft="104dp"
            android:layout_marginStart="104dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_fontcolor_black"
            android:visibility="gone"
            app:backgroundTint="@color/colorPrimaryDark"
            app:fabSize="mini"
            app:layout_anchor="@id/fab_box"
            app:layout_anchorGravity="top" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_color_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginLeft="148dp"
            android:layout_marginStart="148dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_fontcolor_black"
            android:visibility="gone"
            app:backgroundTint="@android:color/holo_green_dark"
            app:fabSize="mini"
            app:layout_anchor="@id/fab_box"
            app:layout_anchorGravity="top" />
    </FrameLayout>


</LinearLayout>